<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f7f7f7"
    >

    <RelativeLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:paddingTop="25dp" >

            <ImageView
                android:id="@+id/cobrain_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="25dp"
                android:src="@drawable/logo_cobrain" />

            <TextView
                android:id="@+id/message_label"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/cobrain_logo"
                android:layout_marginBottom="10dp"
                android:visibility="gone"
                android:text="" />

            <RelativeLayout
                android:id="@+id/login_fields"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/message_label"
                android:background="@drawable/border"
                android:padding="10dp"
                android:clipChildren="false"
                android:clipToPadding="false"
                >
                <include layout="@layout/inc_login_fields" />
            </RelativeLayout>


            <Button
                android:id="@+id/login_button"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn_login_purple_gradient"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/login_fields"
                android:textColor="#fff"
                android:text="LOGIN" />

            <TextView
                android:id="@+id/forgot_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="@string/forgot_password_link"
                android:textColor="@color/LtPurple"
                android:layout_below="@+id/login_button"
                android:layout_centerHorizontal="true" />

        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:id="@+id/relativeLayout">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:text="Not a member?"
            android:textColor="#000"
            android:layout_alignTop="@+id/signup_link"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/signup_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/textView1"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:textSize="17sp"
            android:text="Create My Cobrain"
            android:textColor="@color/SeaGreenAlpha" />

    </RelativeLayout>

</RelativeLayout>