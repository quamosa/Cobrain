<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White" 
    >

  	    <RelativeLayout
  	        android:id="@+id/top_header"
  	        android:layout_margin="5dp"
  	        android:padding="5dp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           >

        	    <Button
 	        android:id="@+id/training_skip_button"
 	        style="@style/green_button"
 	        android:layout_width="wrap_content"
 	        android:layout_height="wrap_content"
 	        android:layout_alignParentRight="true"
 	        android:text="DONE" />

        	    <TextView
        	        android:id="@+id/training_question"
        	        android:layout_width="wrap_content"
        	        android:layout_height="wrap_content"
        	        android:layout_alignBottom="@+id/training_skip_button"
        	        android:layout_alignParentLeft="true"
        	        android:layout_alignTop="@+id/training_skip_button"
        	        android:layout_marginRight="8dp"
        	        android:padding="8dp"
        	        android:gravity="center_vertical"
        	        android:layout_toLeftOf="@+id/training_skip_button"
        	        android:background="@color/CraveBorderColor"
        	        android:maxLines="2"
        	        android:text="@string/blah"
        	        android:textColor="#000"
        	        android:textSize="12sp" />
       
       </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/craves_header"
        android:layout_below="@+id/top_header"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent" 
	    >
        
 	    <Button
 	        android:id="@+id/training_save_button"
 	        style="@style/green_button"
 	        android:layout_width="wrap_content"
 	        android:layout_height="wrap_content"
 	        android:layout_alignParentBottom="true"
 	        android:layout_marginTop="10dp"
 	        android:layout_centerHorizontal="true"
 	        android:paddingLeft="30dp"
 	        android:paddingRight="30dp"
 	        android:text="GET MORE CRAVES" />
	
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_above="@+id/training_save_button"
	        android:orientation="vertical"
	        >
	
	        <LinearLayout
	            android:layout_weight="1"
	            android:layout_width="match_parent"
	            android:layout_height="0dp"
	            android:orientation="horizontal" >
	            	
	            <include
	                android:id="@+id/training_image_1"
					layout="@layout/inc_training_image_frame_with_info"
	                style="@style/training_image_1"
	                 />
	
	            <include
	                android:id="@+id/training_image_2"
					layout="@layout/inc_training_image_frame_with_info"
	                style="@style/training_image_2" />
	
	        </LinearLayout>

	        	    	
	        <LinearLayout
	            android:layout_weight="1"
	            android:layout_width="match_parent"
	            android:layout_height="0dp"
	            android:orientation="horizontal" >
	
	            <include
	                android:id="@+id/training_image_3"
					layout="@layout/inc_training_image_frame_with_info"
	                style="@style/training_image_3" />
	
	            <include
	                android:id="@+id/training_image_4"
					layout="@layout/inc_training_image_frame_with_info"
	                style="@style/training_image_4" />
	        </LinearLayout>
	    </LinearLayout>
	
	    <!--
	    GridView
	        android:id="@+id/gridView1"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_above="@+id/save_training_button"
	        android:stretchMode="columnWidth"
	        android:verticalSpacing="10dp"
	        android:horizontalSpacing="10dp"
	        android:layout_alignParentLeft="true"
	        android:layout_below="@+id/which_header"
	        android:layout_marginTop="14dp"
	        android:numColumns="2" >
	
	    </GridView
	    -->
    </RelativeLayout>

</RelativeLayout>
