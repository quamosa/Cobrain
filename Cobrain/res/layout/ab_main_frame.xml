    <RelativeLayout 
	    android:id="@+id/app_icon_layout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
		android:background="@drawable/selectable_background_cobrain"
        android:paddingRight="5dp"
		android:clickable="true"
        >
	    
	    <ImageView
	        android:id="@+id/menu_icon"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:src="@drawable/ic_slideout_menu_up_indicator"
		    />
	    <ImageView
	        android:id="@+id/app_icon"
	        android:layout_marginLeft="2dp"
	        android:layout_toRightOf="@+id/menu_icon"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:src="@drawable/ic_ab_cobrain_logo"
		    />
    
    </RelativeLayout>
    
    <RelativeLayout 
    android:layout_toRightOf="@+id/app_icon_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
     >
    
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text=""
        android:textColor="#000"
        android:textSize="20sp"
        />
    <TextView
        android:id="@+id/subtitle"
        android:layout_below="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="#a0a0a0"
        android:text=""
        android:visibility="gone"
        />
	</RelativeLayout>
	
</RelativeLayout>
