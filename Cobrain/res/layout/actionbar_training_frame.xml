<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/DarkPurple"
     >

    <ImageButton
        android:id="@+id/navigation_button"
	    android:padding="10dp"
        android:layout_width="@dimen/button_size"
        android:layout_height="@dimen/button_size"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
		android:background="@drawable/purple_button_highlight"
        android:src="@drawable/ic_navigation_menu_action" />

    <Button
        android:id="@+id/frame_caption"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/button_size"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/purple_button_highlight"
        android:gravity="center"
        android:text="Teach My Cobrain"
        android:textSize="25sp" />

    <Button
        android:id="@+id/training_skip_button"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/button_size"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/purple_button_highlight"
        android:drawablePadding="5dp"
        android:drawableRight="@drawable/ic_forward"
        android:padding="10dp"
        android:visibility="gone"
        android:text="Skip" />

</RelativeLayout>
