<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#692a65"
    >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#949" 
    >

    <RelativeLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/drop_shadow" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff3ff"
            android:padding="20dp"
            android:paddingTop="25dp" >

            <ImageView
                android:id="@+id/cobrain_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="25dp"
                android:src="@drawable/logo_cobrain" />

            <TextView
                android:id="@+id/message_label"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/cobrain_logo"
                android:layout_marginBottom="10dp"
                android:visibility="gone"
                android:text="" />
            
            <TextView
                android:id="@+id/email_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/message_label"
                android:layout_marginBottom="10dp"
                android:text="Email Login" />

            <EditText
                android:id="@+id/email"
                style="@style/edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/email_label" />

            <TextView
                android:id="@+id/password_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/email"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="20dp"
                android:text="Password" />

            <EditText
                android:id="@+id/password"
                style="@style/edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/password_label"
                android:inputType="textPassword" />

            <TextView
                android:id="@+id/forgot_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/password"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="10dp"
                android:text="@string/forgot_password_link" />

            <Button
                android:id="@+id/login_button"
                style="@style/login_button"
                android:layout_below="@id/password"
                android:text="LOGIN" />

        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/main"
        android:background="#692a65"
         >

        <Button
            android:id="@+id/signup_button"
            style="@style/signup_button"
            android:layout_below="@+id/textView1"
            android:text="CREATE AN ACCOUNT" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:text="Not yet a member?"
            android:textColor="@color/White" />

    </RelativeLayout>
</RelativeLayout>
</ScrollView>