<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >
	<ImageView
       android:id="@+id/training_image"
	   android:layout_width="match_parent"
	   android:layout_height="match_parent"
        />
	
	<ProgressBar 
	    android:id="@+id/training_progress"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_centerInParent="true"
	    />
	
	<RelativeLayout
	    android:id="@+id/training_checkbox"
	    android:padding="7dp"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent" 
	    android:background="@drawable/border_transparent"
	    >
		<ImageView 
		    android:id="@+id/training_checkbox_icon"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignParentRight="true"
		    android:src="@drawable/ic_training_checkbox"
		    />
	
	</RelativeLayout>
	
</RelativeLayout>
