<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:layout_gravity="center"
    android:padding="3dp"
     >

      <RelativeLayout
        android:id="@+id/border_for_image"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
        android:background="@drawable/crave_border"
    android:gravity="center"
    android:padding="20dp"
		>              
              <ImageView 
                  android:id="@+id/loading_image"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                  android:src="@drawable/ic_home_rack_cobrain_logo"
                  />

              <TextView
                android:id="@+id/info"
			    android:padding="10dp"
                android:layout_below="@+id/loading_image"
                android:gravity="center"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
              	android:text="While your Cobrain finds new Craves for you, check out these popular items."
                  />

              
      </RelativeLayout>

      
</RelativeLayout>